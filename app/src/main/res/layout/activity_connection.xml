<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.samriti.userinfo.connection"
    android:background="@drawable/pic">

    <TextView
        android:id="@+id/textView"
        android:layout_width="400dp"
        android:layout_height="120dp"

        android:layout_alignParentTop="true"
        android:text="You can now connect with Sunshine with your other accounts :-"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:textStyle="italic" />
    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/face"
        android:onClick="fb"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp"
        android:layout_alignTop="@+id/imageView13"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/twitter"
        android:onClick="twitter"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/insta"
        android:onClick="instagram"
        android:layout_alignTop="@+id/imageView13"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp" />

</RelativeLayout>